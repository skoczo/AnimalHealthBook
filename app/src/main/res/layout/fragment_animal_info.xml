<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animal_view.info.AnimalInfo">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/animal_info_img"
                    android:layout_width="300px"
                    android:layout_height="300px"
                    android:layout_margin="50px"
                    android:background="@drawable/border"
                    android:padding="20px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2sp" />

                    <TextView
                        android:id="@+id/animal_view_name"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:paddingBottom="30px"
                        android:paddingLeft="30px"
                        android:paddingRight="30px"
                        android:paddingTop="30px"
                        android:text="Axel"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textIsSelectable="false"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <TextView
                    android:id="@+id/animal_view_born_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="@string/born_date" />

                <TextView
                    android:id="@+id/animal_view_born"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:text="New Text" />

                <TextView
                    android:id="@+id/animal_view_age_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="@string/age" />

                <TextView
                    android:id="@+id/animal_view_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:text="New Text" />

                <TextView
                    android:id="@+id/animal_view_weight_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="@string/weight" />

                <TextView
                    android:id="@+id/animal_view_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text="New Text" />

                <TextView
                    android:id="@+id/animal_view_breed_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="@string/breed" />

                <TextView
                    android:id="@+id/animal_view_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:text="New Text" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
